<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card text-white bg-primary" style="max-width: 20rem;">
                <div class="card-header">Ingresar Tarea</div>
                <div class="card-body">
                    <form action="/tarea/agregar" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="name_task" placeholder="Nombre Tarea" autofocus>
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="status_task">
                                <option value="0">Seleccione Estado Tarea</option>
                                <option value="Iniciado">Iniciado</option>
                                <option value="Desarrollo">Desarrollo</option>
                                <option value="Finalizado">Finalizado</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="descrip_task" rows="5"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Ingresar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>